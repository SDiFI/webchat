{
    "name": "@sdifi/webchat",
    "author": "Tiro ehf.",
    "version": "0.3.0",
    "license": "MIT",
    "homepage": "https://github.com/sdifi/webchat",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build --format umd,cjs,esm --name Webchat",
        "build:standalone": "tsdx build --format umd --name Webchat --entry src/index-umd.tsx",
        "test": "tsdx test --passWithNoTests",
        "format": "prettier --write \"./**/*.{js,ts,tsx,json,html}\"",
        "lint": "eslint src",
        "prepare": "yarn build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "generate-proto": "scripts/generate-proto"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 4,
        "useTabs": false,
        "printWidth": 120,
        "semi": true,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "jsxBracketSameLine": false,
        "bracketSpacing": true
    },
    "module": "dist/webchat.esm.js",
    "size-limit": [
        {
            "path": "dist/webchat.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/webchat.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@babel/core": "^7.21.0",
        "@bufbuild/buf": "^1.27.1",
        "@rollup/plugin-image": "^3.0.2",
        "@size-limit/preset-small-lib": "^8.2.4",
        "@types/react": "^18.0.28",
        "@types/react-dom": "^18.0.11",
        "@types/styled-components": "^5.0.1",
        "@typescript-eslint/eslint-plugin": "^5.59.7",
        "@typescript-eslint/parser": "^5.59.7",
        "buffer": "^5.5.0",
        "eslint": "^8.49.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-react-app": "^7.0.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.32.2",
        "grpc-tools": "^1.12.4",
        "husky": "^8.0.3",
        "jest": "^26.0.0",
        "process": "^0.11.10",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-is": "^18.2.0",
        "rollup-plugin-polyfill-node": "^0.12.0",
        "size-limit": "^8.2.4",
        "ts-jest": "^26.0.0",
        "ts-proto": "^1.157.1",
        "tsdx": "^0.14.1",
        "tslib": "^2.5.0",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "axios": "^1.3.4",
        "long": "^5.2.1",
        "nice-grpc-web": "^3.3.1",
        "protobufjs": "^7.2.4",
        "react-intl-universal": "^2.7.1",
        "styled-components": "^5.0.1"
    },
    "jest": {
        "moduleNameMapper": {
            "axios": "axios/dist/node/axios.cjs"
        },
        "transform": {
            "^.+\\.tsx?$": "ts-jest",
            "^.+\\.(svg|gif)$": "<rootDir>/svgTransform.js"
        }
    }
}
