{
  "name": "@sdifi/webchat",
  "author": "Tiro ehf.",
  "version": "0.2.0",
  "license": "MIT",
  "homepage": "https://github.com/sdifi/webchat",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --format umd,cjs,esm --name Webchat",
    "build:standalone": "tsdx build --format umd --name Webchat --entry src/index-umd.tsx",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "NODE_OPTIONS='--openssl-legacy-provider' start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/webchat.esm.js",
  "size-limit": [
    {
      "path": "dist/webchat.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/webchat.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@rollup/plugin-image": "^3.0.2",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addons": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/styled-components": "^5.0.1",
    "babel-loader": "^9.1.2",
    "husky": "^8.0.3",
    "react-is": "^18.2.0",
    "size-limit": "^8.2.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "styled-components": "^5.0.1"
  }
}
